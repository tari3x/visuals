
ROOT=$(shell git rev-parse --show-toplevel)

SUBDIR=$(shell basename ${PWD})

# CR-someday:
# https://stackoverflow.com/questions/10451242/how-to-adjust-the-path-that-emacs-compile-goto-error-gets-from-the-compilation
build:
	echo "Entering directory '${PWD}'"
	dune build ${JS:.js=.bc.js} 

%.js: FORCE
	cp ${ROOT}/_build/default/grid/${SUBDIR}/$*.bc.js $@

index.html: 
	ln -s  ${ROOT}/html/index-client-light.html $@

index-rain.html:
	ln -s  ${ROOT}/grid/html/$@

index-load.html:
	ln -s  ${ROOT}/grid/html/$@

external:
	ln -s  ${ROOT}/external .

start.sh:
	ln -s  ${ROOT}/start.sh

stop.sh:
	ln -s  ${ROOT}/stop.sh

clean:
	dune clean

FORCE:
